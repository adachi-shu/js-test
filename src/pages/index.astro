---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title="Welcome to Astro.">
	<link slot="font" rel="preconnect" href="https://fonts.googleapis.com">
	<link slot="font" rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link slot="font" href="https://fonts.googleapis.com/css2?family=Noto+Serif+JP:wght@400;500;700&display=swap" rel="stylesheet">
	<main>
		<Header />
		<div>通常バージョン</div>
		<p class="weight_400">フォントテスト-400</p>
		<p class="weight_500">フォントテスト-500</p>
		<p class="weight_700">フォントテスト-700</p>
	</main>
</Layout>

<style>
  body {
    font-family: "Noto Serif JP", sans-serif;
  }
	.weight_400 {
		font-weight: 400;
	}
	.weight_500 {
		font-weight: 500;
	}
	.weight_700 {
		font-weight: 700;
	}
</style>
